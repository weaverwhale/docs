---
import HeaderLink from './HeaderLink.astro';
import LightDarkMode from './LightDarkMode.astro';
import { SITE_TITLE } from '../config';

const links = [
	{
		name: "Home",
		url: "/"
	},
	{
		name: "Onboarding",
		url: "/onboarding"
	},
	{
		name: "On Call",
		url: "/oncall"
	},
	{
		name: "Blog",
		url: "/blog"
	},
	{
		name: "Search",
		url: "/search"
	}
]
---

<header>
	<div class="header-inner">
		<div>
			<a href="/">
				<img src="/tw-logo.svg" alt={SITE_TITLE} width="150" height="21" />
			</a>
		</div>
		<nav>
			<div id="mobileNavClose">
				<svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" fill="var(--light-blue)" viewBox="0 0 24 24">
					<path d="M0 0h24v24H0z" fill="none"/>
					<path d="M19 6.41L17.59 5 12 10.59 6.41 5 5 6.41 10.59 12 5 17.59 6.41 19 12 13.41 17.59 19 19 17.59 13.41 12 19 6.41z"/>
				</svg>
			</div>
			{links.map(link => <HeaderLink href={link.url}>{link.name}</HeaderLink>)}
			<LightDarkMode />
		</nav>
		<div id="mobileNavOpen">
			<svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" fill="var(--light-blue)" viewBox="0 0 24 24">
				<path d="M0 0h24v24H0z" fill="none"/>
				<path d="M4 18h17v-2H4v2zM4 13h17v-2H4v2zM4 6v2h17V6H4z"/>
			</svg>
	</div>
</header>

<style lang="scss">
	header {
		margin: 0em 0 2em;
		background: var(--header-background);
		position: sticky;
		top: 0;
		z-index: 1;
	}

	.header-inner {
		display: flex;
		align-items: center;
		justify-content: space-between;
		gap: 1.25em;
		padding: 1em;
	}

	nav {
		display: none;
		text-align: right;

		a {
			color: var(--light-blue);
		}
	}

	svg {
		display: block;
	}

	h2 {
		margin: 0.5em 0;
	}

	#mobileNavOpen {
		display: flex;
		align-items: center;
		cursor: pointer;
	}

	@media (min-width: 700px) {
		nav {
			display: flex;
		}
		
		#mobileNavOpen, #mobileNavClose {
			display: none !important;
		}
	}

	#mobileNavClose {
		cursor: pointer;
		text-align: right;

		svg {
			margin-left: auto;
			margin-right: 0;
		}
	}
</style>

<style lang="scss" is:global>
	@media (max-width: 699px) {
		.show-mobile {
			display: block !important;
			position: fixed;
			top: 0;
			left: 0;
			right: 0;
			bottom: 0;
			max-width: none;
			margin: 0 !important;
			padding: 1em;
			width: calc(100% - 2em);
			height: 100vh;
			background: var(--header-background);
			display: flex;
			align-items: flex-start;
			flex-flow: column;
			text-align: left;
			z-index: -1;
			overflow-y: auto;

			a, a *, i {
				font-size: 3.4rem !important;
				font-size: 12vw !important;
				font-style: normal;
				font-weight: 400;
			}

			a {
				display: block;
				margin: 0 !important;

				&.active {
					opacity: 1;
				}
			}

			+ #mobileNavOpen {
				opacity: 0 !important;
			}
		}
	}
</style>

<script>
	const nav = document.querySelector('nav');
	const open = document.getElementById('mobileNavOpen');
	const close = document.getElementById('mobileNavClose');
	
	if(nav && open && close) {
		[open, close].map(el => {
			el.addEventListener('click', () => {
				nav.classList.toggle('show-mobile');
		
				const showHide = nav.classList.contains('show-mobile');
				if (showHide) {
					document.body.classList.add("no-scroll");
				} else {
					document.body.classList.remove("no-scroll");
				}
			});
		})
	}
</script>