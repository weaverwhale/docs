---
const { 
  heroImage,
  title,
  description,
  pubDate,
  minutesRead,
  updatedDate,
 } = Astro.props;
---

<main>
  <article>
    {heroImage && <img width={720} height={360} src={heroImage} alt="" />}
    <h1 class="title">{title}</h1>
    <p>{description}</p>
    {updatedDate && <time>Published </time>}{pubDate && <time>{pubDate}</time>}
    {updatedDate && (<br/><time>Last updated </time><time>{updatedDate}</time>)}
    {minutesRead && (<br><time><small>{minutesRead}</small></time>)}
    <br/>
    <br />
    <hr />
    <slot />
  </article>
</main>